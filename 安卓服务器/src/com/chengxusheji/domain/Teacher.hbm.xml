<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="Teacher" table="Teacher">

          <!-- 主键记录编号 -->
          <id name="id" column="id">
            <generator class="native"/>
          </id>

          <!-- 简单字符串属性: 姓名 -->
          <property
            name="name"
            column="name"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 职称 -->
          <property
            name="position"
            column="position"
            type="string"
            length="12"
          />

          <!-- 简单字符串属性: 密码 -->
          <property
            name="password"
            column="password"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 教师简介 -->
          <property
            name="introduction"
            column="introduction"
            type="string"
            length="2000"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
